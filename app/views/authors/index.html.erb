<div class="container">
  <div class="page-header">
    <h1>Authors Detail</h1>
    <hr>
    <%# <h4><span class="label label-primary">This is the list of existing orders</span></h4> %>
  </div>
</div>
<div class="container ">
  <table class="table table-striped table-bordered table-hover ">
     <thead>
      <tr>
        <th>Author Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Title</th>
        <th>Show Full Details</th>
        <th>Show Book Details</th>
      </tr>
    </thead>
    <tbody>  
    <% @authors.each do |author| %>
      <tr>
        <td><%=author.id%></td>
        <td><%=author.first_name%></td>
        <td><%=author.last_name %></td>
        <td><%=author.title%></td>
        <td><%=link_to "Show", author_path(author.id)%></td>
        <td><%=link_to "Show Book ", book_path(author.id)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
