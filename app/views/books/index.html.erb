<div class="container">
  <div class="page-header">
    <h1>Existing Book Details</h1>
    <hr>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Book Id</th>
        <th>Title </th>
        <th>Published Year </th>
        <th>Out of Print</th>
        <th>views</th>
        <th>Show Book Details</th>
        </tr>
    </thead>
    <tbody>  
      <% @books.each do |book| %>
      <tr>
        <td><%=book.id%></td>
        <td><%=book.title%></td>
        <td><%=book.published_year%></td>
        <td><%=book.out_of_print%></td>
        <td><%=book.views%></td>
        <td><%= link_to "Show Book",  book_path(book.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <strong><%= link_to "Add New",  new_book_path %></strong>
</div>

