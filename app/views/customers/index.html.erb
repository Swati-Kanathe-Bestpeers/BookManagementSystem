<div class="container">
  <div class="page-header">
    <h1>Existing Customer Details</h1>
    <hr>
    <h4><span class="label label-primary">This is the list of existing customer</span></h4>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Customer Id</th>
        <th>Email Id </th>
        <th>Title </th>
        <th>Order Count</th>
        <th>Show Customer Details</th>
        <th>Show Order Details</th>
      </tr>
    </thead>
    <tbody>  

      <% @customers.each do |customer| %>
      <tr>
        <td><%=customer.id%></td>
        <td><%=customer.email%></td>
        <td><%=customer.title%></td>
        <td><%=customer.order_count%></td>
        <td><%= link_to "Show Customer",  customer_path(customer.id) %></td>
        <td><%=link_to "Order Details", order_path(customer.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <strong><%= link_to "Add New", new_customer_path %></strong>
</div>
