<h2>You can edit this information only.</h2>
<%= form_for (@customer) do |form| %>
  <p><strong><%= form.label :first_nm, "First Name" %></strong></p>
  <p><strong><%= form.text_field :first_nm %></strong></p>
  <p><strong><%=form.label :last_nm, "Last Name" %></strong></p>
  <p><strong><%=form.text_field :last_nm %></strong></p>
  <p><strong><%=form.label :title, "Title" %></strong></p>
  <p><strong><%=form.text_field :title %></strong></p>
  <p><strong><%=form.label :email, "Email Id" %></strong></p>
  <p><strong><%=form.email_field :email %></strong></p>
  <p><strong><%=form.label :visit, "Visit" %></strong></p>
  <p><strong><%=form.number_field :visit %></strong></p>
  <p><strong><%=form.label :order_count, "Order Count" %></strong></p>
  <p><strong><%=form.number_field :order_count %></strong></p>
  <%=form.submit "Save Customer" %>
<% end%>
<br>
<%= button_to " Delete Customer", @customer, method: "delete" %>