<div class="container">
  <% if flash[:notice] %>
    <%= content_tag :h1, flash[:notice] %>
  <% else %>
    <%= content_tag :h1, "Please Log in" %>
  <% end %>
  <%= form_with url: sessions_path do |f| %>
    <%= f.label :username, "User Name "%>
    <%= f.text_field :username %><br><br>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %><br><br>
    <%= link_to "Sign Up", new_user_path %><br><br>
    <%= f.submit "Sign In!" %>
  <% end %>
</div>

